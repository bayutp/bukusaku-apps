<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash"
    tools:context=".ui.onboarding.OnBoardingActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_onboarding"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"/>

    <Button
        android:id="@+id/btn_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_finish"
        android:text="@string/onboarding_finish"
        android:paddingStart="@dimen/dimen_16dp"
        android:paddingEnd="@dimen/dimen_16dp"
        android:fontFamily="@font/roboto_light"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@id/view_pager_onboarding"
        app:layout_constraintStart_toStartOf="@id/view_pager_onboarding"
        android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/layout_indicator"/>

    <com.rd.PageIndicatorView
        android:id="@+id/layout_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:orientation="horizontal"
        app:piv_animationType="thinWorm"
        app:piv_dynamicCount="true"
        app:piv_interactiveAnimation="true"
        app:piv_selectedColor="@android:color/white"
        app:piv_unselectedColor="@color/black_10_transparent"
        app:piv_viewPager="@id/view_pager_onboarding"
        app:piv_radius="@dimen/dimen_8dp"
        app:piv_padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_finish"
        app:layout_constraintStart_toStartOf="@+id/btn_finish"/>
</android.support.constraint.ConstraintLayout>