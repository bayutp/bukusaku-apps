<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.onboarding.OnBoardingFragment" tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/img_slide"
        android:layout_width="320dp"
        android:layout_height="241dp"
        android:scaleType="fitCenter"
        tools:src="@drawable/img_slide_3"
        android:contentDescription="@null"
        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toTopOf="@+id/tv_title_slide"
        app:layout_constraintVertical_chainStyle="packed" android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.35000002"/>

    <TextView
        android:id="@+id/tv_title_slide"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:text="@string/onboarding_title_1"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/img_slide"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/img_slide" app:layout_constraintStart_toStartOf="@+id/img_slide"
        app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/tv_desc_slide"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_desc_slide"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_light"
        android:textSize="16sp"
        android:textAlignment="center"
        android:text="@string/onboarding_desc_1"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_slide"
        app:layout_constraintStart_toStartOf="@+id/img_slide" app:layout_constraintEnd_toEndOf="@+id/img_slide"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.5"/>


</android.support.constraint.ConstraintLayout>