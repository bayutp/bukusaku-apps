<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/swipe_refresh_product"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent">
        <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/container_product_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.detail.product.ProductDetailActivity">
            <android.support.design.widget.AppBarLayout
                android:id="@+id/app_bar_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:elevation="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar_main_product"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@drawable/bg_toolbar"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
            </android.support.design.widget.AppBarLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent" android:layout_height="150dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/bg_toolbar"
                app:layout_constraintTop_toBottomOf="@id/app_bar_product"/>
            <android.support.v7.widget.CardView
                android:id="@+id/product_cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="32dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/view">
                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp">
                    <ImageView
                        android:id="@+id/img_product_detail"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:padding="8dp"
                        android:scaleType="centerInside"/>
                    <TextView
                        android:id="@+id/tv_product_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_margin="8dp"
                        android:textColor="@android:color/black"
                        android:fontFamily="sans-serif"
                        android:textAlignment="textStart"
                        app:layout_constraintStart_toEndOf="@id/img_product_detail"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/img_product_detail"/>
                    <TextView
                        android:id="@+id/tv_product_company"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif"
                        android:textAlignment="textStart"
                        app:layout_constraintStart_toEndOf="@id/img_product_detail"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_product_title"/>
                    <TextView
                        android:id="@+id/tv_product_category"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="sans-serif"
                        android:textAlignment="textStart"
                        app:layout_constraintStart_toEndOf="@id/img_product_detail"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_product_company"/>
                    <TextView
                        android:id="@+id/tv_product_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_margin="8dp"
                        android:fontFamily="sans-serif"
                        android:textAlignment="textStart"
                        android:lineSpacingExtra="1.5dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/img_product_detail"/>

                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_product_images"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_cover"
            />

            <Button
                android:id="@+id/btn_inquiry"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="8dp"
                android:textSize="14sp"
                android:layout_margin="16dp"
                android:textColor="@android:color/white"
                android:text="Ajukan Kerjasama"
                android:textAllCaps="false"
                android:background="@drawable/bg_btn_inquiry"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/rv_product_images" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/btn_visit"/>
            <Button
                android:id="@+id/btn_visit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="8dp"
                android:layout_margin="16dp"
                android:textSize="14sp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:text="Kunjungi Website"
                android:background="@drawable/bg_btn_visit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/btn_inquiry"
                app:layout_constraintBottom_toBottomOf="@+id/btn_inquiry"
                app:layout_constraintStart_toEndOf="@+id/btn_inquiry" app:layout_constraintHorizontal_bias="0.5"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.v4.widget.SwipeRefreshLayout>