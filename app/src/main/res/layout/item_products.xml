<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardElevation="4dp"
    android:layout_marginBottom="8dp">
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/card_logo"
            android:layout_width="75dp"
            android:layout_height="75dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            android:layout_margin="8sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:id="@+id/img_logo_products"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:scaleType="centerCrop"
            />
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/tv_products"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:padding="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif"
            app:layout_constraintStart_toEndOf="@id/card_logo"
            app:layout_constraintEnd_toStartOf="@id/img_bookmark_product"
            app:layout_constraintTop_toTopOf="@id/card_logo"
            android:layout_marginStart="16dp" android:layout_marginEnd="8dp"/>
        <TextView
            android:id="@+id/tv_company"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            app:layout_constraintStart_toEndOf="@id/card_logo"
            app:layout_constraintEnd_toStartOf="@id/img_bookmark_product"
            app:layout_constraintTop_toBottomOf="@id/tv_products"
            android:layout_marginStart="16dp" android:layout_marginEnd="8dp"/>
        <TextView
            android:id="@+id/tv_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            app:layout_constraintStart_toEndOf="@id/card_logo"
            app:layout_constraintEnd_toStartOf="@id/img_bookmark_product"
            app:layout_constraintTop_toBottomOf="@id/tv_company"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"/>
        <ImageView
            android:id="@+id/img_bookmark_product"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_bookmark_border"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@id/tv_products"/>


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>